# Linux specific configurations
echo "Loading $0"

export JAVA_HOME=/usr/lib/jvm/java-1.7.0-openjdk-amd64

export PATH=~/go_appengine

source ~/.zshrc.pre-oh-my-zsh

source ~/.nvm/nvm.sh
nvm use 0.11

# Alias mac like pbcopy and pbpaste
alias pbcopy='xclip -selection clipboard'
alias pbpaste='xclip -selection clipboard -o'

source /etc/bash_completion.d/g4d

# As a workaround the IDE stops responding where the ibus-deemon is active
# http://tools.android.com/knownissues/ibus
export IBUS_ENABLE_SYNC_MODE=1; ibus-daemon -xrd
